<div class="ride-form">
	<%= form_for @ride, :html=> {:class=>"form-inline"} do |f| %>
		<div class="field">
			<%=f.label :airport %>
			<%=f.select :airport, [["To LAX", "To LAX"], ["From LAX", "From LAX"], ["To Ontario", "To Ontario"], ["From Ontario", "From Ontario"]], {}, {:class=>"form-control"} %>
		</div>

		<div class="field">
			<%= f.label :flight_date %>
			<%= f.datetime_select :date, {:start_year=> Time.now.year, :end_year=> Time.now.year + 1, :ampm=> true, :minute_step=> 15}, { class: "form-control" } %>
		</div>

		<div class="field">
				<%= f.label :shuttle_time %>
				<%= f.time_select :ridetime, {:ampm=> true, :minute_step=> 15}, { class: "form-control" }  %>
		</div>
		<%= f.submit :class=> "btn btn-success" %>
	<% end %>
</div>
